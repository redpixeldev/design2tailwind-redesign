---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import WhyUs from '@components/WhyUs.astro';
import Advantages from '@components/Advantages.astro';
import OurValues from '@components/OurValues.astro';
---

<Layout title='Astro'>
	<Header />

	<div class='mb-16 pt-32 min-[768px]:mb-20 min-[768px]:pt-36 min-[1024px]:mb-24 min-[1024px]:pt-44 min-[1280px]:pt-52'>
		<div class='fancy-feature-fiftyOne relative'>
			<div class='container'>
				<div class='flex flex-wrap'>
					<div class='wow fadeInLeft m-auto w-full max-w-full flex-[0_0_auto] px-3 min-[1024px]:w-7/12'>
						<div class='title-style-five text-center'>
							<div
								class="sc-title-two relative mb-5 inline-block pl-10 text-[17px] text-(--prime-ten) italic before:absolute before:top-3.5 before:left-0 before:h-px before:w-6 before:bg-(--prime-ten) before:content-['']">
								About
							</div>
							<h2 class='font-Recoleta text-4xl font-normal text-black min-[1024px]:text-5xl min-[1280px]:text-6xl'>A little about Us</h2>
							<p class='mb-0 pt-7 text-base min-[1024px]:text-lg min-[1280px]:text-xl'>
								We’re Design2Tailwind: a small sister-run studio focused on one thing, turning designs into clean,
								production-ready front-end code. We work closely with agencies and teams who want dependable output,
								clear communication, and a handoff that’s easy to maintain.
							</p>
						</div>
					</div>
				</div>
			</div>
			<!-- /.container -->
			<img
				src='images/lazy.svg'
				data-src='images/shape/shape_172.svg'
				alt=''
				class='lazy-img shapes shape-two hidden absolute top-[4%] -z-1 min-[1024px]:block min-[1024px]:right-[6%] min-[1536px]:right-[8%]'
			/>
		</div>
	</div>

	<WhyUs />

	<Advantages />

	<OurValues />

	<Footer />
</Layout>
