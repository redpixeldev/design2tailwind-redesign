---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import WhyUs from '@components/WhyUs.astro';
import OurProcess from '@components/OurProcess.astro';
import CTA from '@components/CTA.astro';
import FAQ from '@components/FAQ.astro';
import Testimonials from '@components/Testimonials.astro';
import Advantages from '@components/Advantages.astro';
---

<Layout title='Astro'>
	<Header />

	<div class='hero-banner-two relative pt-32 pb-12 md:pb-16 lg:pt-40 lg:pb-20 xl:pt-48 xl:pb-24'>
		<div class='container'>
			<img
				src='images/logo/logo-sketch.png'
				alt=''
				class='lazy-img mx-auto h-10 md:h-12 lg:h-16 xl:h-16'
			/>
			<div class='flex flex-wrap pt-7'>
				<div class='wow fadeInUp mx-auto w-full text-center lg:w-5/6 xl:w-2/3'>
					<h1
						class='hero-heading font-Recoleta xsm:text-4xl xsm:leading-[1.2em] relative text-[82px] leading-[1.09em] font-normal sm:text-[40px] sm:leading-[1.2em] md:text-[40px] md:leading-[1.2em] lg:text-[58px] 2xl:text-[70px]'>
						<span
							class="relative z-1 inline-block before:absolute before:top-2/4 before:left-[0%] before:z-[-1] before:h-[81%] before:w-[100%] before:-translate-y-2/4 before:bg-[#FFEBE5] before:content-['']">
							Sketch
						</span> to Tailwind CSS
					</h1>
					<p
						class='xsm:pt-[10px] text-base leading-[1.67em] sm:pt-[10px] md:pt-[10px] lg:pt-7 lg:text-[19px] xl:pt-10 xl:text-xl'>
						Send us your Sketch file and we’ll deliver pixel-accurate, responsive Tailwind CSS that’s clean,
						maintainable, and easy to integrate into real projects. Perfect for agencies and teams who want reliable
						handoff quality without rewriting the front-end.
					</p>
				</div>
			</div>
		</div>
	</div>

	<WhyUs />

	<Advantages />

	<OurProcess />

	<Testimonials />

	<CTA />

	<FAQ />

	<Footer />
</Layout>
