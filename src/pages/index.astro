---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import WhyUs from '@components/WhyUs.astro';
import Advantages from '@components/Advantages.astro';
import OurProcess from '@components/OurProcess.astro';
import LogoCloud from '@components/LogoCloud.astro';
import CTA from '@components/CTA.astro';
import FAQ from '@components/FAQ.astro';
import Testimonials from '@components/Testimonials.astro';
import OurBlog from '@components/OurBlog.astro';
---

<Layout title='Astro'>
	<Header />

	<div class='hero-banner-two relative pt-36 pb-16 md:pb-20 lg:pt-44 lg:pb-24 xl:pt-52 xl:pb-28'>
		<img
			src='images/lazy.svg'
			data-src='images/shape/shape_26.svg'
			alt=''
			class='lazy-img shapes shape-left absolute top-[40%] left-[8%] z-[-1] hidden w-[11.9%] max-w-[248px] sm:block'
		/>
		<img
			src='images/lazy.svg'
			data-src='images/shape/shape_27.svg'
			alt=''
			class='lazy-img shapes shape-right absolute top-[39%] right-[9%] z-[-1] hidden w-[9.1%] max-w-[193px] sm:block'
		/>
		<div class='container'>
			<div class='flex flex-wrap'>
				<div
					class='wow fadeInUp m-auto w-full max-w-full flex-[0_0_auto] px-[12px] text-center md:w-9/12 lg:w-8/12 xl:w-8/12'>
					<h1
						class='hero-heading font-Recoleta xsm:text-4xl xsm:leading-[1.2em] relative text-[82px] leading-[1.09em] font-normal sm:text-[40px] sm:leading-[1.2em] md:text-[40px] md:leading-[1.2em] lg:text-[58px] 2xl:text-[70px]'>
						<img
							src='images/lazy.svg'
							data-src='images/shape/shape_25.svg'
							alt=''
							class='lazy-img shapes line-shape xsm:hidden! absolute top-[45%] left-[3%] z-[-1] sm:hidden! md:hidden! lg:w-40 xl:w-auto'
						/>We convert your <span
							class="relative z-1 inline-block before:absolute before:top-2/4 before:left-[31%] before:z-[-1] before:h-[81%] before:w-[73%] before:-translate-y-2/4 before:bg-[#FFEBE5] before:content-['']"
							>design</span
						> to Tailwind CSS.
					</h1>
					<p
						class='xsm:pt-[10px] mb-[30px] pt-5 text-base leading-[1.67em] sm:pt-[10px] md:pt-[10px] lg:mb-[40px] lg:pt-[10px] lg:text-lg lg:text-[19px] xl:mb-[50px] xl:text-xl'>
						Tailwind-first markup designed to drop straight into your stack.
						<br />
						We work from Figma, PSD, XD, and Sketch, and deliver code that fits seamlessly into modern stacks.
					</p>
					<div
						class='xs:flex-row flex flex-col items-center justify-center gap-3 sm:flex-row sm:gap-6 md:flex-row md:gap-6 lg:flex-row lg:gap-6 xl:flex-row xl:gap-6'>
						<a
							href='/#quote'
							class='tran3s btn-three xsm:p-[0_35px] xsm:leading-[48px] xsm:text-[15px] relative rounded-[28px] bg-[#BC46E2] p-[0_40px] text-[17px] leading-[52px] font-medium text-white transition-all duration-[0.3s] ease-[ease-in-out] hover:bg-[#4e257e] sm:p-[0_35px] sm:text-[15px] sm:leading-[48px] md:p-[0_35px] md:text-[15px] md:leading-[48px] lg:text-[15px]'
							>Get a Free Quote</a
						>
						<a
							href='/#process'
							class='tran3s btn-three xsm:p-[0_35px] xsm:leading-[48px] xsm:text-[15px] relative rounded-[28px] border border-[#4e257e] p-[0_40px] text-[17px] leading-[52px] font-medium text-[#4e257e] transition-all duration-[0.3s] ease-[ease-in-out] hover:bg-[#4e257e] hover:text-white sm:p-[0_35px] sm:text-[15px] sm:leading-[48px] md:p-[0_35px] md:text-[15px] md:leading-[48px] lg:text-[15px]'
