---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import WhyUs from '@components/WhyUs.astro';
import Advantages from '@components/Advantages.astro';
import OurProcess from '@components/OurProcess.astro';
import LogoCloud from '@components/LogoCloud.astro';
import CTA from '@components/CTA.astro';
import FAQ from '@components/FAQ.astro';
import Testimonials from '@components/Testimonials.astro';
import OurBlog from '@components/OurBlog.astro';
---

<Layout
	title='We convert your design to Tailwind CSS code | Design2Tailwind'
	description='We convert your designs to clean, production-ready Tailwind CSS. From Figma, PSD, XD, and Sketch to handcrafted code that fits your stack.'
	keywords={['tailwind css', 'design to code', 'figma to tailwind', 'psd to tailwind', 'web development']}>
	<Header />

	<div
		class='hero-banner-two relative pt-36 pb-16 md:pb-20 lg:pt-44 lg:pb-24 xl:pt-52 xl:pb-28'>
		<img
			src='images/lazy.svg'
			data-src='images/shape/shape_26.svg'
			alt=''
			class='lazy-img shapes shape-left absolute top-[40%] left-[8%] -z-1 hidden w-[11.9%] max-w-[248px] sm:block'
		/>
		<img
			src='images/lazy.svg'
			data-src='images/shape/shape_27.svg'
			alt=''
			class='lazy-img shapes shape-right absolute top-[39%] right-[9%] -z-1 hidden w-[9.1%] max-w-[193px] sm:block'
		/>
		<div class='container'>
			<div class='flex flex-wrap'>
				<div
					class='wow fadeInUp m-auto w-full max-w-full flex-[0_0_auto] px-3 text-center md:w-9/12 lg:w-8/12'>
					<h1
						class='hero-heading font-Recoleta relative text-4xl leading-[1.2em] font-normal sm:text-[40px] lg:text-[58px] lg:leading-[1.09em] xl:text-[70px] 2xl:text-[82px]'>
						<img
							src='images/lazy.svg'
							data-src='images/shape/shape_25.svg'
							alt=''
							class='lazy-img shapes line-shape absolute top-[45%] left-[3%] -z-1 hidden lg:block lg:w-40 xl:w-auto'
						/>We convert your <span
							class="relative z-1 inline-block before:absolute before:top-1/2 before:left-[31%] before:-z-1 before:h-[81%] before:w-[73%] before:-translate-y-1/2 before:bg-[#FFEBE5] before:content-['']"
							>design</span
						> to Tailwind CSS.
					</h1>
					<p
						class='mb-7.5 pt-2.5 text-base leading-[1.67em] lg:mb-10 lg:text-[19px] xl:mb-12.5 xl:pt-5 xl:text-xl'>
						Tailwind-first markup designed to drop straight into your stack.
						<br />
						We work from Figma, PSD, XD, and Sketch, and deliver code that fits seamlessly into modern stacks.
					</p>
					<div class='flex flex-col items-center justify-center gap-3 sm:flex-row sm:gap-6'>
						<a
							href='/#quote'
							class='tran3s btn-three relative rounded-[28px] bg-[#BC46E2] px-8.75 text-[15px]/[48px] font-medium text-white transition-all duration-300 ease-in-out hover:bg-[#4e257e] xl:px-10 xl:text-[17px]/[52px]'
							>Get a Free Quote</a
						>
						<a
							href='/#process'
							class='tran3s btn-three relative rounded-[28px] border border-[#4e257e] px-8.75 text-[15px]/[48px] font-medium text-[#4e257e] transition-all duration-300 ease-in-out hover:bg-[#4e257e] hover:text-white xl:px-10 xl:text-[17px]/[52px]'
							>Learn More</a
						>
					</div>
				</div>
			</div>
		</div>
	</div>

	<WhyUs />

	<Advantages />

	<OurProcess id='process' />

	<Testimonials />

	<div class='fancy-feature-thirtySeven mb-24 sm:mb-28 lg:mb-36 xl:mb-40'>
