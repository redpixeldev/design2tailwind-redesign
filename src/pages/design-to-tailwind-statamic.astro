---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import WhyUs from '@components/WhyUs.astro';
import OurProcess from '@components/OurProcess.astro';
import CTA from '@components/CTA.astro';
import FAQ from '@components/FAQ.astro';
import Testimonials from '@components/Testimonials.astro';
import Advantages from '@components/Advantages.astro';
---

<Layout
	title='Design to Tailwind CSS & Statamic | We convert your design to Tailwind CSS code with Statamic templates'
	description='Beautiful Statamic sites built with Tailwind CSS. Clean templates that are easy to maintain and extend.'
	keywords={['statamic tailwind', 'statamic development', 'statamic themes', 'tailwind css']}>
	<Header />

	<div
		class='hero-banner-two relative pt-32 pb-12 min-[768px]:pb-16 min-[1024px]:pt-40 min-[1024px]:pb-20 min-[1280px]:pt-48 min-[1280px]:pb-24'>
		<div class='container'>
			<img
				src='images/logo/logo-statamic.svg'
				alt=''
				class='lazy-img mx-auto h-10 min-[768px]:h-12 min-[1024px]:h-16'
			/>
			<div class='flex flex-wrap pt-7'>
				<div class='wow fadeInUp mx-auto w-full text-center min-[1024px]:w-5/6 min-[1280px]:w-2/3'>
					<h1
						class='hero-heading font-Recoleta relative text-4xl/[1.2em] font-normal min-[640px]:text-[40px] min-[1024px]:text-[58px]/[1.09em] min-[1536px]:text-[70px]'>
						<span
							class="relative z-1 inline-block before:absolute before:top-1/2 before:left-0 before:-z-1 before:h-[81%] before:w-full before:-translate-y-1/2 before:bg-[#FFEBE5] before:content-['']">
							Design
						</span> to Tailwind CSS & Statamic
					</h1>
					<p
						class='pt-2.5 text-base/[1.67em] min-[1024px]:pt-7 min-[1024px]:text-[19px]/[1.67em] min-[1280px]:pt-10 min-[1280px]:text-xl/[1.67em]'>
						Send us your design and weâ€™ll develop the complete Statamic project: templates, components, collections,
						globals, navigation, SEO setup, and a clean Tailwind UI. Perfect for teams who want a finished, editable
						Statamic website without hiring in-house.
					</p>
				</div>
			</div>
		</div>
	</div>

	<WhyUs />

	<Advantages />

	<OurProcess />

	<Testimonials />

	<CTA />

	<FAQ />

	<Footer />
</Layout>
