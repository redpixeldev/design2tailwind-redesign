---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import WhyUs from '@components/WhyUs.astro';
import OurProcess from '@components/OurProcess.astro';
import CTA from '@components/CTA.astro';
import FAQ from '@components/FAQ.astro';
import Testimonials from '@components/Testimonials.astro';
import Advantages from '@components/Advantages.astro';
---

<Layout
	title='Adobe XD to Tailwind CSS | We convert your Adobe XD design to Tailwind CSS code'
	description='Transform your Adobe XD designs into production-ready Tailwind CSS. Clean code that integrates seamlessly with your stack.'
	keywords={['adobe xd to tailwind', 'xd to code', 'adobe xd conversion', 'tailwind css']}>
	<Header />

	<div
		class='hero-banner-two relative pt-32 pb-12 md:pb-16 lg:pt-40 lg:pb-20 xl:pt-48 xl:pb-24'>
		<div class='container'>
			<img
				src='images/logo/logo-adobe-xd.png'
				alt=''
				class='lazy-img mx-auto h-10 md:h-12 lg:h-16'
			/>
			<div class='flex flex-wrap pt-7'>
				<div class='wow fadeInUp mx-auto w-full text-center lg:w-5/6 xl:w-3/4'>
					<h1
						class='hero-heading font-Recoleta relative text-4xl/[1.2em] font-normal sm:text-[40px] lg:text-[58px]/[1.09em] 2xl:text-[70px]'>
						<span
							class="relative z-1 inline-block before:absolute before:top-1/2 before:left-0 before:-z-1 before:h-[81%] before:w-full before:-translate-y-1/2 before:bg-[#FFEBE5] before:content-['']">
							Adobe XD
						</span> to Tailwind CSS
					</h1>
					<p
						class='pt-2.5 text-base/[1.67em] lg:pt-7 lg:text-[19px]/[1.67em] xl:pt-10 xl:text-xl/[1.67em]'>
						Send us your Adobe XD file and we’ll deliver pixel-accurate, responsive Tailwind CSS that’s clean,
						maintainable, and easy to integrate into real projects. Perfect for agencies and teams who need reliable
						front-end output without slowdowns or rewrites.
					</p>
				</div>
			</div>
		</div>
	</div>

	<WhyUs />

	<Advantages />

	<OurProcess />

	<Testimonials />

	<CTA />

	<FAQ />

	<Footer />
</Layout>
