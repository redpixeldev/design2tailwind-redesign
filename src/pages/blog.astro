---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
---

<Layout title='Astro'>
	<Header />

	<div class="pt-36 min-[1024px]:pt-44 min-[1280px]:pt-52">
		<div class="fancy-feature-fiftyOne relative">
			<div class="container">
				<div class="flex flex-wrap">
					<div class="wow fadeInLeft">
						<div class="title-style-five mb-10 min-[768px]:mb-16">
							<div class="sc-title-two italic relative inline-block text-[17px] text-(--prime-ten) mb-5 pl-10 before:content-[''] before:absolute before:w-6 before:h-px before:left-0 before:top-3.5 before:bg-(--prime-ten)">Blog</div>
							<h2 class="font-Recoleta font-normal text-black text-4xl min-[1024px]:text-5xl min-[1280px]:text-6xl">Latest posts</h2>
							<p class="text-black text-xl pt-7">Check out our posts for the latest news, tutorials, <br/> tips and tricks for Tailwind CSS
							</p>
						</div>
					</div>
				</div>
			</div> <!-- /.container -->
			<img src="images/lazy.svg" data-src="images/shape/shape_172.svg" alt="" class="lazy-img shapes shape-two hidden absolute -z-1 top-[4%] min-[1024px]:block min-[1024px]:right-[6%] min-[1536px]:right-[8%]">
		</div>
	</div>

