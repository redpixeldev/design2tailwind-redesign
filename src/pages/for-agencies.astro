---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import WhyUs from '@components/WhyUs.astro';
import OurProcess from '@components/OurProcess.astro';
import LogoCloud from '@components/LogoCloud.astro';
import CTA from '@components/CTA.astro';
import FAQ from '@components/FAQ.astro';
import Testimonials from '@components/Testimonials.astro';
---

<Layout title='Astro'>
	<Header />

	<div class='hero-banner-two relative pt-36 pb-12 min-[768px]:pb-16 min-[1024px]:pt-44 min-[1024px]:pb-20 min-[1280px]:pt-52 min-[1280px]:pb-24'>
		<div class='container'>
			<div class='flex flex-wrap'>
				<div class='wow fadeInUp mx-auto w-full text-center min-[1024px]:w-5/6 min-[1280px]:w-3/4'>
					<h1
						class='hero-heading font-Recoleta relative text-4xl leading-[1.2em] font-normal min-[640px]:text-[40px] min-[1024px]:text-[58px] min-[1024px]:leading-[1.09em] min-[1280px]:text-[70px] min-[1536px]:text-[82px]'>
						Tailwind CSS development for
						<span
							class="relative z-1 inline-block before:absolute before:top-1/2 before:left-0 before:-z-1 before:h-[81%] before:w-full before:-translate-y-1/2 before:bg-[#FFEBE5] before:content-['']">
							Agencies
						</span>
					</h1>
					<p
						class='pt-2.5 text-base/[1.67em] min-[1024px]:text-[19px] min-[1280px]:pt-10 min-[1280px]:text-xl'>
						We help agencies deliver faster with production-ready Tailwind CSS, consistent structure, and clear
						communication. Use us as an extension of your team whenever you need extra front-end capacity.
					</p>
				</div>
			</div>
		</div>
	</div>

	<div class='partner-section-six wow fadeInUp mb-12 min-[768px]:mb-16 min-[1024px]:mb-20 min-[1280px]:mb-28'>
		<div class='container'>
			<div
				class='top-header border-b-2 border-solid border-b-black pb-11.25 min-[1280px]:pb-17.5'>
				<div class='flex items-center justify-between'>
					<span class='lines inline-block h-0.5 w-1/3 grow bg-black min-[1024px]:w-full'></span>
					<div
						class='title w-full px-2.5 py-0 text-center text-sm tracking-[2px] text-black uppercase min-[1280px]:text-base'>
						Trusted by agencies and teams at
					</div>
					<span class='lines inline-block h-0.5 w-1/3 grow bg-black min-[1024px]:w-full'></span>
				</div>

				<div class='partner_slider_one mt-10 min-[1280px]:mt-16.25'>
					<div class='item mx-3'>
						<div class='icon flex h-12.5 items-center justify-center'>
							<img
								src='images/logo/Plogo-37.png'
								alt=''
							/>
						</div>
					</div>
					<div class='item mx-3'>
						<div class='icon flex h-12.5 items-center justify-center'>
							<img
								src='images/logo/Plogo-38.png'
								alt=''
							/>
						</div>
					</div>
					<div class='item mx-3'>
						<div class='icon flex h-12.5 items-center justify-center'>
							<img
								src='images/logo/Plogo-39.png'
								alt=''
							/>
						</div>
					</div>
					<div class='item mx-3'>
						<div class='icon flex h-12.5 items-center justify-center'>
							<img
								src='images/logo/Plogo-40.png'
								alt=''
							/>
						</div>
					</div>
					<div class='item mx-3'>
						<div class='icon flex h-12.5 items-center justify-center'>
							<img
								src='images/logo/Plogo-41.png'
								alt=''
							/>
						</div>
					</div>
					<div class='item mx-3'>
						<div class='icon flex h-12.5 items-center justify-center'>
							<img
								src='images/logo/Plogo-39.png'
								alt=''
							/>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class='fancy-feature-fiftyOne relative'>
		<div class='container'>
			<div class='flex flex-wrap'>
				<div class='wow fadeInLeft m-auto w-full max-w-full flex-[0_0_auto] px-3 min-[1024px]:w-7/12'>
					<div class='title-style-five mb-10 text-center min-[1280px]:mb-16.25'>
						<h2 class='font-Recoleta text-4xl font-normal text-black min-[1024px]:text-5xl min-[1280px]:text-6xl'>
							Flexible monthly retainers.
						</h2>
						<p
							class='pt-2.5 mb-7.5 text-base/[1.67em] min-[1024px]:mb-10 min-[1024px]:text-[19px] min-[1280px]:pt-5 min-[1280px]:mb-12.5 min-[1280px]:text-xl'>
							These blocks are designed for agencies who want consistent front-end support. Use your hours on
							design-to-Tailwind builds, ongoing improvements, and overflow work.
						</p>
					</div>
				</div>
			</div>
		</div>
		<!-- /.container -->
		<img
			src='images/lazy.svg'
			data-src='images/shape/shape_172.svg'
			alt=''
			class='lazy-img shapes shape-two hidden absolute top-[4%] -z-1 min-[1024px]:block min-[1024px]:right-[6%] min-[1536px]:right-[8%]'
		/>
	</div>

	<div class='pricing-section-three relative my-6 min-[768px]:my-14 min-[1024px]:my-24'>
		<div class='container'>
			<div class='pricing-table-area-three wow fadeInUp'>
				<div class='tab-content'>
					<div class='tab-pane show active'>
						<div class='flex flex-wrap items-center'>
							<!-- Starter Plan -->
							<div class='w-full max-w-full flex-[0_0_auto] px-3 min-[640px]:w-6/12 min-[1024px]:w-3/12'>
								<div
									class='pr-column pr-one relative pt-7.5 pr-2.5 pb-7.5 pl-5 rounded-[15px] border border-solid border-[#b1b2f4] min-[1280px]:pt-15 min-[1280px]:pb-12.5 min-[1280px]:pl-11.25 min-[1280px]:rounded-[15px_0_0_15px] min-[1280px]:border-r-0 min-[1536px]:pl-7.5'>
									<img
										src='images/icon/icon_56.svg'
										alt=''
										class='icon h-6.25'
									/>
									<div
										class='plan mt-5 mb-4.5 text-2xl text-black min-[1280px]:mt-6.5 min-[1280px]:mb-5.5 min-[1280px]:text-[32px]'>
										Starter
									</div>
									<div class='pr-body'>
										<ul class='mb-0 list-none pl-0 text-left'>
											<li
												class="before:font-Bootstrap relative mb-3.75 pr-5 text-base before:absolute before:top-0 before:left-0 before:font-bold before:text-(--prime-two) before:content-['\f272'] min-[1280px]:text-lg">
												5 hours/month
											</li>
											<li
												class="before:font-Bootstrap relative mb-3.75 pr-5 text-base before:absolute before:top-0 before:left-0 before:font-bold before:text-(--prime-two) before:content-['\f272'] min-[1280px]:text-lg">
												Quick fixes & overflow tasks
											</li>
											<li
												class="before:font-Bootstrap relative mb-3.75 pr-5 text-base before:absolute before:top-0 before:left-0 before:font-bold before:text-(--prime-two) before:content-['\f272'] min-[1280px]:text-lg">
												Small landing pages
											</li>
										</ul>
									</div>
									<div class='pr-footer pt-7.5 min-[1280px]:pt-3.75'>
										<div
											class='price text-[26px] text-black min-[1280px]:text-[28px]'>
											$400
										</div>
										<div class='trial-text mb-7.5 text-[17px] opacity-75'>Best for light ongoing support</div>
										<a
											href='mailto:hello@design2tailwind.com?subject=Retainer%20Inquiry&body=Hi%2C%0A%0AI%27m%20interested%20in%20your%20agency%20retainer%20services.%0A%0A'
											class='btn-twelve tran3s rounded-[23px] border border-solid border-[#BC46E2] px-11.25 py-0 leading-[43px] font-medium text-[#BC46E2] hover:bg-[#BC46E2] hover:text-white'
											>Request a retainer</a
										>
									</div>
								</div>
								<!-- /.pr-column -->
							</div>
							<!-- Most Popular Plan -->
							<div class='w-full max-w-full flex-[0_0_auto] px-3 min-[640px]:w-6/12 min-[1024px]:w-3/12'>
								<div
									class='pr-column active relative pt-7.5 pr-2.5 pb-7.5 pl-5 min-[1280px]:pt-15 min-[1280px]:pb-12.5 min-[1280px]:pl-11.25 min-[1536px]:pl-7.5'>
									<div
										class='absolute top-4 right-4 rounded-full bg-[#BC46E2] px-3 py-1 text-xs font-semibold text-white'>
										Most popular
									</div>
									<img
										src='images/icon/icon_57.svg'
										alt=''
										class='icon h-6.25'
									/>
									<div
										class='plan mt-5 mb-4.5 text-2xl text-black min-[1280px]:mt-6.5 min-[1280px]:mb-5.5 min-[1280px]:text-[32px]'>
										Most Popular
									</div>
									<div class='pr-body pt-2.5'>
										<ul class='mb-0 list-none pl-0 text-left'>
											<li
												class="before:font-Bootstrap relative mb-3.75 pr-5 text-base before:absolute before:top-0 before:left-0 before:font-bold before:text-(--prime-two) before:content-['\f272'] min-[1280px]:text-lg">
												10 hours / month
											</li>
											<li
												class="before:font-Bootstrap relative mb-3.75 pr-5 text-base before:absolute before:top-0 before:left-0 before:font-bold before:text-(--prime-two) before:content-['\f272'] min-[1280px]:text-lg">
												Steady weekly progress
											</li>
											<li
												class="before:font-Bootstrap relative mb-3.75 pr-5 text-base before:absolute before:top-0 before:left-0 before:font-bold before:text-(--prime-two) before:content-['\f272'] min-[1280px]:text-lg">
												Multiple sections or pages
											</li>
										</ul>
									</div>
									<div class='pr-footer pt-7.5 min-[1280px]:pt-11.25'>
										<div
											class='price text-[26px] text-black min-[1280px]:text-[28px]'>
											$800
										</div>
										<div class='trial-text mb-7.5 text-[17px] opacity-75'>Best for ongoing work</div>
										<a
											href='mailto:hello@design2tailwind.com?subject=Retainer%20Inquiry&body=Hi%2C%0A%0AI%27m%20interested%20in%20your%20agency%20retainer%20services.%0A%0A'
											class='btn-twelve tran3s rounded-[23px] border border-solid border-[#BC46E2] px-11.25 py-0 leading-[43px] font-medium text-[#BC46E2] hover:bg-[#BC46E2] hover:text-white'
											>Request a retainer</a
										>
									</div>
								</div>
								<!-- /.pr-column -->
							</div>
							<!-- Growth Plan -->
							<div class='w-full max-w-full flex-[0_0_auto] px-3 min-[640px]:w-6/12 min-[1024px]:w-3/12'>
								<div
									class='pr-column pr-two relative pt-7.5 pr-2.5 pb-7.5 pl-5 rounded-[15px] border border-solid border-[#b1b2f4] min-[1024px]:border-l-0 min-[1280px]:pt-15 min-[1280px]:pb-12.5 min-[1280px]:pl-11.25 min-[1536px]:pl-7.5'>
									<img
										src='images/icon/icon_58.svg'
										alt=''
										class='icon h-6.25'
									/>
									<div
										class='plan mt-5 mb-4.5 text-2xl text-black min-[1280px]:mt-6.5 min-[1280px]:mb-5.5 min-[1280px]:text-[32px]'>
										Growth
									</div>
									<div class='pr-body'>
										<ul class='mb-0 list-none pl-0 text-left'>
											<li
												class="before:font-Bootstrap relative mb-3.75 pr-5 text-base before:absolute before:top-0 before:left-0 before:font-bold before:text-(--prime-two) before:content-['\f272'] min-[1280px]:text-lg">
