---
interface Value {
	icon: string;
	title: string;
	subtitle: string;
	bgColor?: string;
}

interface Props {
	titlePart1?: string;
	titlePart2?: string;
	titleImage?: string;
	description?: string;
	values?: Value[];
	shapeImage?: string;
}

const {
	titlePart1 = "What matters most:",
	titlePart2 = "Our Values.",
	titleImage = "images/shape/shape_188.svg",
	description = "At jano, we've seen again and again how the seemingly simple act of creating can be a force for growth, change,and discovery in people's lives. We want to inspire and multiply the kind of creative exploration that furthers expression, learning and application.",
	shapeImage = "images/shape/shape_189.svg",
	values = [
		{
			icon: "images/icon/icon-direction.svg",
			title: "Learn skills with over 120k+",
			subtitle: "Video courses.",
			bgColor: "#e193b0",
		},
		{
			icon: "images/icon/icon-hand-heart.svg",
			title: "Learn skills with over 120k+",
			subtitle: "Video courses.",
			bgColor: "#e193b0",
		},
		{
			icon: "images/icon/icon-funds.svg",
			title: "Learn skills with over 120k+",
			subtitle: "Video courses.",
			bgColor: "#e193b0",
		},
	],
} = Astro.props;
---

<div class="fancy-feature-fiftyNine relative mt-16 sm:mt-20 md:mt-20 lg:mt-20 xl:mt-28 xl:mb-36 lg:mb-28 mb-24 wow fadeInUp z-30">
	<div class="container">
		<div class="title-style-ten text-center wow fadeInUp">
			<h2 class="main-title font-Recoleta font-normal  text-black  tracking-[0] leading-[1.17em] 2xl:text-[54px] md:text-[35px] sm:text-[35px] xsm:text-[35px] ">{titlePart1} <span class="relative"> {titlePart2}<img class=" absolute z-[-1] right-0 bottom-1" src={titleImage} alt=""></span></h2>
			<div class="md:w-5/6 lg:w-5/6 xl:w-5/6 mx-auto">
				<p class="text-base xl:text-xl lg:text-[19px] leading-[1.67em] mt-[25px]  md:mt-5 sm:mt-5 xsm:mt-5 wow fadeInUp">{description}</p>
			</div>
		</div>

		<div class="card-wrapper  pt-[45px] lg:pt-5 md:pt-5 sm:pt-5 xsm:pt-5 pb-[55px] lg:pb-[30px] md:pb-[30px] sm:pb-[30px] xsm:pb-[30px] mt-[85px] lg:mt-[50px] md:mt-[50px] sm:mt-[50px] xsm:mt-[50px] border-y-2 border-y-black border-solid">
			<div class="grid md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 justify-center gap-8">
				{values.map((value) => (
					<div class="card-style-twentySix text-center wow fadeInUp">
						<div class="icon rounded-[50%] m-auto flex items-center justify-center w-[75px] h-[75px] lg:w-[55px] lg:h-[55px] lg:p-[15px] md:w-[55px] md:h-[55px] md:p-[15px] sm:w-[55px] sm:h-[55px] sm:p-[15px] xsm:w-[55px] xsm:h-[55px] xsm:p-[15px]" style={value.bgColor ? `background-color: ${value.bgColor};` : ''}>
							<img src="images/lazy.svg" data-src={value.icon} alt="" class="lazy-img h-10">
						</div>
						<h5 class=" text-black mt-10 lg:mt-[30px] md:mt-[30px] sm:mt-[30px] xsm:mt-[30px] mb-[5px] lg:text-[20px] md:text-[20px] sm:text-[20px] xsm:text-[20px]">{value.title}</h5>
						<p class=" text-[18px] leading-[1.67em] lg:text-[16px] md:text-[16px] sm:text-[16px] xsm:text-[16px] ">{value.subtitle}</p>
					</div>
				))}
			</div>
		</div> <!-- /.card-wrapper -->
	</div> <!-- /.container -->

	<img src="images/lazy.svg" data-src={shapeImage} alt="" class="lazy-img shapes shape-one absolute z-[-1] left-0 md:-top-10 lg:-top-10 xl:top-[4%] sm:hidden! xsm:hidden!">
</div>
