---
interface Value {
	icon: string;
	title: string;
	subtitle: string;
	bgColor?: string;
}

interface Props {
	titlePart1?: string;
	titlePart2?: string;
	titleImage?: string;
	description?: string;
	values?: Value[];
	shapeImage?: string;
}

const {
	titlePart1 = 'How we approach',
	titlePart2 = 'our work',
	titleImage = 'images/shape/shape_188.svg',
	description = 'We believe great front-end work is invisible when done right. Our focus is on clarity, consistency, and code that doesn’t fight your team six months later.',
	shapeImage = 'images/shape/shape_189.svg',
	values = [
		{
			icon: 'images/icon/icon-clean-code.png',
			title: 'Built for maintainability',
			subtitle:
				'We write Tailwind CSS that’s easy to understand, extend, and hand off. No clever hacks, no surprises later.',
			bgColor: '#e193b0',
		},
		{
			icon: 'images/icon/icon-workflow.png',
			title: 'Fits your workflow',
			subtitle:
				'Our code is structured to drop into real projects, whether you’re working with Laravel, static sites, or modern JS frameworks.',
			bgColor: '#e193b0',
		},
		{
			icon: 'images/icon/icon-trust.png',
			title: 'Clear and direct',
			subtitle: 'You’ll always know where things stand. We keep feedback loops tight and decisions explicit.',
			bgColor: '#e193b0',
		},
	],
} = Astro.props;
---

<div
	class='fancy-feature-fiftyNine wow fadeInUp relative z-30 mt-16 mb-24 sm:mt-20 lg:mb-28 xl:mt-28 xl:mb-36'>
	<div class='container'>
		<div class='title-style-ten wow fadeInUp text-center'>
			<h2
				class='main-title font-Recoleta text-[35px] leading-[1.17em] font-normal tracking-[0] text-black 2xl:text-[54px]'>
				{titlePart1}
				<span class='relative'>
					{titlePart2}<img
						class='absolute right-0 bottom-1 -z-1'
						src={titleImage}
						alt=''
					/></span
				>
			</h2>
			<div class='mx-auto md:w-5/6'>
				<p class='wow fadeInUp mt-5 text-base leading-[1.67em] lg:mt-6.25 lg:text-[19px] xl:text-xl'>
					{description}
				</p>
			</div>
		</div>

		<div
			class='card-wrapper mt-12.5 pt-5 pb-7.5 border-y-2 border-solid border-y-black xl:mt-21.25 xl:pt-11.25 xl:pb-13.75'>
			<div class='grid justify-center gap-8 md:grid-cols-3'>
				{
					values.map((value) => (
						<div class='card-style-twentySix wow fadeInUp text-center'>
							<div
								class='icon m-auto flex size-13.75 items-center justify-center rounded-full p-3.75 xl:size-18.75 xl:p-0'
								style={value.bgColor ? `background-color: ${value.bgColor};` : ''}>
								<img
									src='images/lazy.svg'
									data-src={value.icon}
									alt=''
									class='lazy-img h-10'
								/>
							</div>
							<h5 class='mt-7.5 mb-1.25 text-xl text-black xl:mt-10'>
								{value.title}
							</h5>
							<p class='text-base leading-[1.67em] xl:text-lg'>
								{value.subtitle}
							</p>
						</div>
					))
				}
			</div>
		</div>
		<!-- /.card-wrapper -->
	</div>
	<!-- /.container -->

	<img
		src='images/lazy.svg'
		data-src={shapeImage}
		alt=''
		class='lazy-img shapes shape-one hidden absolute left-0 -z-1 md:block md:-top-10 xl:top-[4%]'
	/>
</div>
