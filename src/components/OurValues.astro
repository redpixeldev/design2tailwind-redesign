---
interface Value {
	icon: string;
	title: string;
	subtitle: string;
	bgColor?: string;
}

interface Props {
	titlePart1?: string;
	titlePart2?: string;
	titleImage?: string;
	description?: string;
	values?: Value[];
	shapeImage?: string;
}

const {
	titlePart1 = 'How we approach',
	titlePart2 = 'our work',
	titleImage = 'images/shape/shape_188.svg',
	description = 'We believe great front-end work is invisible when done right. Our focus is on clarity, consistency, and code that doesn’t fight your team six months later.',
	shapeImage = 'images/shape/shape_189.svg',
	values = [
		{
			icon: 'images/icon/icon-clean-code.png',
			title: 'Built for maintainability',
			subtitle:
				'We write Tailwind CSS that’s easy to understand, extend, and hand off. No clever hacks, no surprises later.',
			bgColor: '#e193b0',
		},
		{
			icon: 'images/icon/icon-workflow.png',
			title: 'Fits your workflow',
			subtitle:
				'Our code is structured to drop into real projects, whether you’re working with Laravel, static sites, or modern JS frameworks.',
			bgColor: '#e193b0',
		},
		{
			icon: 'images/icon/icon-trust.png',
			title: 'Clear and direct',
			subtitle: 'You’ll always know where things stand. We keep feedback loops tight and decisions explicit.',
			bgColor: '#e193b0',
		},
	],
} = Astro.props;
---

<div
	class='fancy-feature-fiftyNine wow fadeInUp relative z-30 mt-16 mb-24 sm:mt-20 md:mt-20 lg:mt-20 lg:mb-28 xl:mt-28 xl:mb-36'>
	<div class='container'>
		<div class='title-style-ten wow fadeInUp text-center'>
			<h2
				class='main-title font-Recoleta xsm:text-[35px] leading-[1.17em] font-normal tracking-[0] text-black sm:text-[35px] md:text-[35px] 2xl:text-[54px]'>
				{titlePart1}
				<span class='relative'>
					{titlePart2}<img
						class='absolute right-0 bottom-1 z-[-1]'
						src={titleImage}
						alt=''
					/></span
				>
			</h2>
			<div class='mx-auto md:w-5/6 lg:w-5/6 xl:w-5/6'>
				<p class='xsm:mt-5 wow fadeInUp mt-[25px] text-base leading-[1.67em] sm:mt-5 md:mt-5 lg:text-[19px] xl:text-xl'>
					{description}
				</p>
			</div>
		</div>

		<div
			class='card-wrapper xsm:pt-5 xsm:pb-[30px] xsm:mt-[50px] mt-[85px] border-y-2 border-solid border-y-black pt-[45px] pb-[55px] sm:mt-[50px] sm:pt-5 sm:pb-[30px] md:mt-[50px] md:pt-5 md:pb-[30px] lg:mt-[50px] lg:pt-5 lg:pb-[30px]'>
			<div class='grid justify-center gap-8 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3'>
				{
					values.map((value) => (
						<div class='card-style-twentySix wow fadeInUp text-center'>
							<div
								class='icon xsm:w-[55px] xsm:h-[55px] xsm:p-[15px] m-auto flex h-[75px] w-[75px] items-center justify-center rounded-[50%] sm:h-[55px] sm:w-[55px] sm:p-[15px] md:h-[55px] md:w-[55px] md:p-[15px] lg:h-[55px] lg:w-[55px] lg:p-[15px]'
								style={value.bgColor ? `background-color: ${value.bgColor};` : ''}>
								<img
									src='images/lazy.svg'
									data-src={value.icon}
									alt=''
									class='lazy-img h-10'
								/>
							</div>
							<h5 class='xsm:mt-[30px] xsm:text-[20px] mt-10 mb-[5px] text-black sm:mt-[30px] sm:text-[20px] md:mt-[30px] md:text-[20px] lg:mt-[30px] lg:text-[20px]'>
								{value.title}
							</h5>
							<p class='xsm:text-[16px] text-[18px] leading-[1.67em] sm:text-[16px] md:text-[16px] lg:text-[16px]'>
								{value.subtitle}
							</p>
						</div>
					))
				}
			</div>
		</div>
		<!-- /.card-wrapper -->
	</div>
	<!-- /.container -->

	<img
		src='images/lazy.svg'
		data-src={shapeImage}
		alt=''
		class='lazy-img shapes shape-one xsm:hidden! absolute left-0 z-[-1] sm:hidden! md:-top-10 lg:-top-10 xl:top-[4%]'
	/>
</div>
