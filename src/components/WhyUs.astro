---
interface Props {
	subtitle?: string;
	title?: string;
	highlightColor?: string;
	paragraph1?: string;
	paragraph2?: string;
	reasonsCount?: string;
	reasonsText?: string;
	tags?: Array<{ text: string; bgColor: string }>;
}

const {
	subtitle = '25+ clients',
	title = 'Why choose Us',
	highlightColor = '#D8FFE8',
	paragraph1 = 'We’re Vivian and Daniela, a sister team with 15+ years of combined front-end experience.',
	paragraph2 = 'We’ve been using Tailwind CSS daily since 2018, long before it was mainstream, and we write code the way we’d want to receive it: clean, predictable, and easy to extend.',
	reasonsCount = '6+',
	reasonsText = 'Reason to choose us',
	tags = [
		{ text: 'Minimal custom CSS', bgColor: 'rgba(255, 130, 130, 0.13)' },
		{ text: 'Agency-friendly', bgColor: 'rgba(73, 230, 213, 0.13)' },
		{ text: 'Fast, reliable delivery', bgColor: 'rgba(255, 180, 120, 0.13)' },
		{ text: 'Easy hand off', bgColor: 'rgba(255, 152, 152, 0.15)' },
		{ text: 'No framework lock-in', bgColor: 'rgba(73, 179, 230, 0.13)' },
		{ text: 'NDA-friendly', bgColor: 'rgba(255, 200, 150, 0.13)' },
	],
} = Astro.props;
---

<div class='fancy-feature-five mb-12 md:mb-16 lg:mb-20 xl:mb-24'>
	<div class='container'>
		<div class='flex flex-wrap items-center'>
			<div
				class='ml-auto! w-full max-w-full flex-[0_0_auto] px-[12px] md:order-last md:w-6/12 lg:order-last lg:w-[45%] xl:order-last xl:w-[45%]'>
				<div class='block-style-two xxl:pr-12! xsm:mb-[50px] wow fadeInRight sm:mb-[50px]'>
					<div class='title-style-three'>
						<!-- <div
							class='sc-title xsm:text-[13px] pb-2.5 text-[14px] tracking-[1px] text-[rgba(0,0,0,0.3)] uppercase sm:text-[13px] md:text-[13px] lg:text-[13px]'>
							Over <span
								class='underline'
								style='color:#a056fa;'
								>{subtitle}</span
							>
						</div> -->
						<h2 class='main-title font-Recoleta m-0 text-4xl font-normal text-black lg:text-5xl xl:text-6xl'>
							{title.split('choose')[0]}<span class='relative z-1 inline-block'
								>choose <span
									class='mark-bg xsm:h-[34px] absolute top-2/4 left-[-5px] z-[-1] h-[50px] w-[98%] -translate-y-2/4 sm:h-[34px] md:h-[34px]'
									style={`background-color:${highlightColor};`}
								></span></span
							>
							{title.split('choose')[1]}
						</h2>
					</div>
					<p
						class='font-gordita xsm:text-[19px] mt-8 leading-[1.67em] sm:text-[19px] md:text-[19px] lg:text-[19px] xl:text-[22px]'>
						{paragraph1}
					</p>
					<p
						class='font-gordita xsm:text-[19px] leading-[1.67em] sm:text-[19px] md:text-[19px] lg:text-[19px] xl:text-[22px]'>
						{paragraph2}
					</p>
				</div>
			</div>

			<div
				class='wow fadeInLeft w-full max-w-full flex-[0_0_auto] px-[12px] md:order-first md:w-6/12 lg:order-first lg:w-6/12 xl:order-first xl:w-6/12'>
				<div
					class='tags-wrapper xsm:p-[25px_15px_30px] relative rounded-[25px] bg-[#F3F7F8] p-[45px_65px_50px] sm:p-[25px_15px_30px] md:p-[25px_15px_30px] lg:p-[25px_15px_30px] 2xl:p-[35px_35px_40px]'>
					<img
						src='images/lazy.svg'
						data-src='images/shape/shape_35.svg'
						alt=''
						class='lazy-img shapes shape-one absolute top-[1%] right-[1%] z-0 w-3/12 animate-[jumpThree_3s_infinite_linear]'
					/>
					<div class='h3 m-0! font-normal text-black'>{reasonsCount}</div>
					<p
						class='xsm:text-[19px] xsm:pb-[10px] pb-[25px] text-[24px] leading-[1.67em] opacity-50 sm:pb-[10px] sm:text-[19px] md:pb-[10px] md:text-[19px] lg:pb-[10px] lg:text-[19px] 2xl:text-[22px]'>
						{reasonsText}
					</p>
					<ul class='m-[0_-10px] mb-0 flex list-none flex-wrap items-center pl-0'>
						{
							tags.map((tag) => (
								<li class='xsm:text-[20px] xsm:m-[5px_0] m-[10px_0] p-[0_10px] text-[24px] text-black sm:m-[5px_0] sm:text-[20px] md:m-[5px_0] md:text-[20px] lg:m-[5px_0] lg:text-[20px]'>
									<a
										class='xsm:text-[15px] xsm:p-3 rounded-[10px] bg-white px-[30px] py-[22px] text-[18px] text-black transition-all duration-[0.3s] ease-[ease-in-out] hover:shadow-[0_15px_40px_rgba(0,0,0,0.05)] sm:p-3 sm:text-[15px] md:p-3 md:text-[15px] lg:p-3 lg:text-[15px]'
										href='#'>
										<span
											class='inline-block rounded-[5px] p-[0_3px] leading-[25px]'
											style={`background-color: ${tag.bgColor};`}>
											{tag.text}
										</span>
									</a>
								</li>
							))
						}
						<li
							class='xsm:text-[20px] xsm:m-[5px_0] m-[10px_0] p-[0_10px] text-[24px] text-black sm:m-[5px_0] sm:text-[20px] md:m-[5px_0] md:text-[20px] lg:m-[5px_0] lg:text-[20px]'>
							& more…
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
