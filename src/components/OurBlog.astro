	title: string;
	excerpt: string;
	category: string;
	date: string;
	link: string;
	delay?: string;
}

interface Props {
	title?: string;
	blogPosts?: BlogPost[];
	ctaText?: string;
	ctaLink?: string;
}

const {
	title = "Our Blog",
	ctaText = "Check our all news",
	ctaLink = "/blog",
	blogPosts = [
		{
			title: "Until recently, the prevailing view assumed lorem ipsum was.",
			excerpt: "Learn how to use box shadows to add some flair to your designs.",
			category: "Featured",
			date: "18 Jul 2023",
