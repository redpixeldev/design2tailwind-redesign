---
interface FAQItem {
	number: string;
	question: string;
	answer: string;
	isDefaultOpen?: boolean;
}

interface Props {
	subtitle?: string;
	titlePart1?: string;
	titlePart2?: string;
	titleImage?: string;
	accordionId?: string;
	decorativeImage?: string;
	faqs?: FAQItem[];
}

const {
	subtitle = 'FAQ',
	titlePart1 = 'Questions &',
	titlePart2 = 'Answers',
	titleImage = 'images/shape/shape_132.svg',
	accordionId = 'accordionOne',
	decorativeImage = 'images/shape/shape_133.svg',
	faqs = [
		{
			number: '01.',
			question: 'What are your prices?',
			answer:
				'Our pricing starts at $350 for the first page and $120 per additional page after and will vary depending on the complexity of the design and the amount of pages or "screens" we need to code.',
			isDefaultOpen: false,
		},
		{
			number: '02.',
			question: 'What are your turnaround times?',
			answer:
				"The best way to get an ETA is to fill out the form above and we'll get back to you with a quote within 24 hours.",
			isDefaultOpen: false,
		},
		{
			number: '03.',
			question: 'What design file formats can you work with?',
			answer:
				'We work with Photoshop (PSD), Figma, Adobe XD and Sketch designs and with design hand-off tools like Zeplin.',
			isDefaultOpen: false,
		},
		{
			number: '04.',
			question: 'What browsers do you support?',
			answer: 'We currently support the latest versions of Google Chrome, Safari, Firefox, and Edge.',
			isDefaultOpen: false,
		},
		{
			number: '05.',
			question: 'Do you offer revisions?',
			answer:
				'We offer 3 round of revisions. Any bug fixes and small changes are free. Any other change will be billed separately.',
			isDefaultOpen: false,
		},
		{
			number: '06.',
			question: 'Do you also do React/Vue work?',
			answer:
				'Yes, we can do React/Vue work as well for an additional fee per page but keep in mind we keep the logic to a minimum since our main focus is on the markup, not the business logic of the components.',
			isDefaultOpen: false,
		},
	],
} = Astro.props;
---

<div
	class='fancy-feature-thirtyThree mt-16 mb-20 sm:mt-20 sm:mb-24 lg:mt-24 lg:mb-28 xl:mt-32 xl:mb-32'>
	<div class='container'>
		<div class='title-style-ten wow fadeInUp text-center'>
			<div
				class='sc-title text-[13px] pb-2.5 tracking-[3px] text-(--prime-nine) uppercase xl:text-[15px] xl:pb-4'>
				{subtitle}
			</div>
			<h2 class='font-Recoleta text-4xl font-normal text-black lg:text-5xl xl:text-6xl'>
				{titlePart1}
				<span class='relative'
					>{titlePart2}
					<img
						class='absolute bottom-2.25 left-0 -z-1'
						src={titleImage}
						alt=''
					/></span
				>
			</h2>
		</div>
		<!-- /.title-style-ten -->

		<div
			class='bg-wrapper wow fadeInUp relative mt-10 p-2.5 bg-[#F6F6F6] xl:mt-20 xl:py-2.5 xl:px-12.5'>
			<div
				class='accordion accordion-style-four'
				id={accordionId}>
				{
					faqs.map((faq, index) => {
						const headingId =
							index === 0
								? 'headingOne'
								: index === 1
									? 'headingTwo'
									: index === 2
										? 'headingThree'
										: index === 3
											? 'headingFour'
											: index === 4
												? 'headingFive'
												: 'headingSix	';
						const collapseId =
							index === 0
								? 'collapseOne'
								: index === 1
									? 'collapseTwo'
									: index === 2
										? 'collapseThree'
										: index === 3
											? 'collapseFour'
											: index === 4
												? 'collapseFive'
												: 'collapseSix';
						const buttonClasses = faq.isDefaultOpen
							? "accordion-button relative flex w-full items-center rounded-none border-0 border-b border-solid border-b-black/8 bg-transparent text-left text-lg/[1.67em] font-medium text-black shadow-none outline-0 transition-all duration-200 ease-in-out py-4.5 px-3.75 after:ml-auto after:size-7.5 after:bg-white after:text-center after:text-2xl after:font-normal after:leading-7.5 after:content-['+'] xl:text-2xl xl:py-7.5 xl:pl-10 xl:pr-11.25"
							: "accordion-button collapsed relative flex w-full items-center rounded-none border-0 border-b border-solid border-b-black/8 bg-transparent text-left text-lg/[1.67em] font-medium text-black shadow-none outline-0 transition-all duration-200 ease-in-out py-4.5 px-3.75 after:ml-auto after:size-7.5 after:bg-white after:text-center after:text-2xl after:font-normal after:leading-7.5 after:content-['+'] xl:text-2xl xl:py-7.5 xl:pl-10 xl:pr-11.25";
						const collapseClasses = faq.isDefaultOpen
							? 'accordion-collapse collapse show'
							: 'accordion-collapse collapse';
						const lastItemButton =
							index === 5
								? "accordion-button collapsed relative flex w-full items-center rounded-none bg-transparent text-left text-lg/[1.67em] font-medium text-black shadow-none outline-0 transition-all duration-200 ease-in-out py-4.5 px-3.75 after:ml-auto after:size-7.5 after:bg-white after:text-center after:text-2xl after:font-normal after:leading-7.5 after:content-['+'] xl:text-2xl xl:py-7.5 xl:pl-10 xl:pr-11.25"
								: buttonClasses;

						return (
							<div class='accordion-item rounded-none border-0 bg-transparent'>
								<div
									class='accordion-header'
									id={headingId}>
									<button
										class={lastItemButton}
										type='button'
										data-bs-toggle='collapse'
										data-bs-target={`#${collapseId}`}
										aria-expanded={faq.isDefaultOpen ? 'true' : 'false'}
										aria-controls={collapseId}>
										<span class='mr-5'>{faq.number}</span> {faq.question}
									</button>
								</div>
								<div
									id={collapseId}
									class={collapseClasses}
									aria-labelledby={headingId}
									data-bs-parent={`#${accordionId}`}>
									<div class='accordion-body bg-[#0F0F0F] text-white/80 pt-0 pr-11.25 pb-6.25 pl-15 xl:px-25 xl:pb-10'>
										<p
											class='m-0 text-lg/[1.67em]'
											set:html={faq.answer.replace(/\n\n/g, '<br><br>')}
										/>
									</div>
								</div>
							</div>
						);
					})
				}
			</div>
			<img
				src='images/lazy.svg'
				data-src={decorativeImage}
				alt=''
				class='lazy-img shapes shape-one absolute -top-16 -right-16 -z-1'
			/>
		</div>
		<!-- /.bg-wrapper -->
	</div>
</div>
