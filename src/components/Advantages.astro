---
interface Advantage {
	icon: string;
	title: string;
	description: string;
	delay?: string;
}

interface Props {
	title?: string;
	titleImage?: string;
	advantages?: Advantage[];
}

const {
	title = 'What sets our work apart',
	titleImage = 'images/shape/shape_188.svg',
	advantages = [
		{
			icon: 'images/icon/icon-medal.png',
			title: 'We’ve been using Tailwind CSS since v0.5',
			description: 'We know when to extend the config, when not to, and how to keep things maintainable long-term.',
			delay: undefined,
		},
		{
			icon: 'images/icon/icon-communication.svg',
			title: 'You’ll talk directly with the people writing the code',
			description: 'Clear updates, quick replies, and no project-manager telephone game.',
			delay: undefined,
		},
		{
			icon: 'images/icon/icon_66.svg',
			title: 'Cross-Browser Testing',
			description:
				'Tested across modern browsers and devices so layouts behave consistently in the real world, not just in Chrome on a laptop.',
			delay: undefined,
		},
		{
			icon: 'images/icon/icon-framework-flexible.svg',
			title: 'Responsive layouts built with real content in mind',
			description: 'Works across desktop, tablet, and mobile without breaking spacing or hierarchy.',
			delay: undefined,
		},
		{
			icon: 'images/icon/icon-code.svg',
			title: 'Modern Tech Stack',
			description: 'Built with Alpine.js for interactivity, scaffolded with Astro for clean structure.',
			delay: undefined,
		},
		{
			icon: 'images/icon/icon-flexibility.png',
			title: 'Need React or Vue?',
			description: 'We adapt our work to your stack without forcing unnecessary abstractions.',
			delay: undefined,
		},
	],
} = Astro.props;
---

<div class='fancy-feature-twentyThree mt-16 mb-10 px-4 md:mt-24 md:mb-14 lg:mt-32 lg:mb-20'>
	<div class='container'>
		<div class='title-style-seven wow fadeInUp pb-5 text-center'>
			<h2 class='font-Recoleta text-4xl font-normal text-black lg:text-5xl xl:text-6xl'>
				<span class='relative inline-block'>
					{title}
					<img
						class='absolute -bottom-2 left-0 -z-1 w-48 rotate-3 xl:w-60'
						src={titleImage}
						alt=''
					/>
				</span>
			</h2>
		</div>

		<div
			class='grid gap-x-12 gap-y-6 pt-10 md:grid-cols-2 md:pt-14 lg:grid-cols-3 lg:gap-y-10 xl:gap-x-24 xl:pt-20'>
			{
				advantages.map((advantage) => (
					<div
						class='wow fadeInUp w-full text-center lg:text-left'
						data-wow-delay={advantage.delay}>
						<div class="icon relative mx-auto flex size-12.5 items-center justify-center rounded-full border-[3px] border-solid border-black before:absolute before:-top-0.75 before:left-1.25 before:-z-1 before:size-[calc(100%+6px)] before:rounded-full before:bg-[#cac6fc] before:content-[''] lg:mx-0 lg:size-15 xl:size-16.25">
							<img
								src='images/lazy.svg'
								data-src={advantage.icon}
								alt=''
								class='lazy-img h-6 xl:h-7'
							/>
						</div>
						<h4 class='mt-6 mb-2.5 text-xl lg:mt-7.5 xl:mb-5'>
							{advantage.title}
						</h4>
						<p>{advantage.description}</p>
					</div>
				))
			}
		</div>
	</div>
</div>
