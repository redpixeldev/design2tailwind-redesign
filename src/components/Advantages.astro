---
interface Advantage {
	icon: string;
	title: string;
	description: string;
	delay?: string;
}

interface Props {
	title?: string;
	titleImage?: string;
	advantages?: Advantage[];
}

const {
	title = 'Advantages',
	titleImage = 'images/shape/shape_188.svg',
	advantages = [
		{
			icon: 'images/icon/icon-medal.png',
			title: 'Tailwind Experts Since 2018',
			description: "We've been using Tailwind CSS daily since 2018. We know it inside and out.",
			delay: undefined,
		},
		{
			icon: 'images/icon/icon-communication.svg',
			title: 'Fast and clear communication',
			description: 'We communicate clearly and promptly, ensuring a smooth development process.',
			delay: undefined,
		},
		{
			icon: 'images/icon/icon_66.svg',
			title: 'Cross-Browser Testing',
			description: 'Works flawlessly on Chrome, Safari, Firefox, Edge, iOS Safari, and Chrome Android.',
			delay: undefined,
		},
		{
			icon: 'images/icon/icon-framework-flexible.svg',
			title: 'Fully Responsive Design',
			description: 'Every pixel perfect across desktop, tablet, and mobile. Tested on all screen sizes.',
			delay: undefined,
		},
		{
			icon: 'images/icon/icon-code.svg',
			title: 'Modern Tech Stack',
			description: 'Built with Alpine.js for interactivity, scaffolded with Astro for clean structure.',
			delay: undefined,
		},
		{
			icon: 'images/icon/icon-flexibility.png',
			title: 'Framework Flexible',
			description: 'Need React or Vue? We can adapt our work to your preferred framework.',
			delay: undefined,
		},
	],
} = Astro.props;
---

<div class='fancy-feature-twentyThree mt-16 mb-10 px-4 md:mt-24 md:mb-14 lg:mt-32 lg:mb-20 xl:mt-32 xl:mb-20'>
	<div class='container'>
		<div class='title-style-seven wow fadeInUp pb-5 text-center'>
			<h2 class='font-Recoleta text-4xl font-normal text-black lg:text-5xl xl:text-6xl'>
				<span class='relative inline-block'>
					{title}
					<img
						class='absolute -bottom-2 left-0 z-[-1] w-48 rotate-3 xl:w-60'
						src={titleImage}
						alt=''
					/>
				</span>
			</h2>
		</div>

		<div
			class='grid gap-x-12 gap-y-6 pt-10 md:grid-cols-2 md:pt-14 lg:grid-cols-3 lg:gap-y-10 xl:grid-cols-3 xl:gap-x-24 xl:pt-20'>
			{
				advantages.map((advantage) => (
					<div
						class='wow fadeInUp w-full text-center lg:text-left xl:text-left'
						data-wow-delay={advantage.delay}>
						<div class="icon xsm:w-[50px] xsm:h-[50px] xsm:m-[0_auto] relative flex h-[65px] w-[65px] items-center justify-center rounded-[50%] border-[3px] border-solid border-black before:absolute before:top-[-3px] before:left-[5px] before:z-[-1] before:h-[calc(100%+6px)] before:w-[calc(100%+6px)] before:rounded-[50%] before:bg-[#cac6fc] before:content-[''] sm:m-[0_auto] sm:h-[50px] sm:w-[50px] md:m-[0_auto] md:h-[50px] md:w-[50px] lg:h-[60px] lg:w-[60px]">
							<img
								src='images/lazy.svg'
								data-src={advantage.icon}
								alt=''
								class='lazy-img h-6 xl:h-7'
							/>
						</div>
						<h4 class='xsm:mb-[10px] xsm:text-[20px] mt-6 mb-5 sm:mb-[10px] sm:text-[20px] md:mb-[10px] md:text-[20px] lg:mt-[30px] lg:mb-[10px] lg:text-[20px]'>
							{advantage.title}
						</h4>
						<p>{advantage.description}</p>
					</div>
				))
			}
		</div>
	</div>
</div>
